<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="application.MainController"
      spacing="10" alignment="CENTER"
      stylesheets="@../css/application.css">

    <Label text="Wybierz kategorię:" styleClass="label-header"/>

    <ComboBox fx:id="categoryBox" prefWidth="150"/>

    <Button text="Generuj złotą myśl"
            onAction="#generateQuote"/>

    <TextArea fx:id="outputArea"
              prefRowCount="4"
              wrapText="true"
              editable="false"
              styleClass="label-bright"/>
</VBox>
